<%= erb :new_post %>

<h2>Posts</h2>
<ul>
  <% @posts.each do |post| %>
    <li>
      <a href="/posts/<%= post.id %>"><%= post.name %> (<%= post.votes %> votes)</a>
      <form action="/posts/<%= post.id %>/upvote" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <input type="submit" value="upvote"/>
      </form>
    </li>
  <% end %>
</ul>
